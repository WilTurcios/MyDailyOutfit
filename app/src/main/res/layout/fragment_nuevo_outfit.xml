<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoOutfitFragment">

    <ImageView
        android:id="@+id/imgcamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar2"
        android:layout_marginTop="110dp"/>




    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menuPrincipal"
        android:onClick="clicMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu_fab_label="MenÃº"
        app:menu_icon="@drawable/menu"
        app:menu_colorPressed="@color/myDailyOutfit"
        app:menu_colorNormal="@color/menuprin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/camara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/subMenuPantalon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pant"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/subMenuFalda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skirt"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/subMenuCamisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tshirt"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/subMenuVestido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dress"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/subMenuShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shor"
            app:fab_colorPressed="@color/menuprin"
            app:fab_colorNormal="@color/myDailyOutfit"/>

    </com.github.clans.fab.FloatingActionMenu>



</FrameLayout>